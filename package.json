{
  "name": "osm-address-collector",
  "type": "module",
  "dependencies": {
    "file-saver-es": "^2.0.5"
  },
  "devDependencies": {
    "jsdom": "^21.1.0",
    "w3c-xmlserializer": "^4.0.0",
    "xo": "^0.53.1",
    "typescript": "^4.9.3",
    "vite": "^4.1.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "node --test",
    "lint": "xo",
    "lint-fix": "xo --fix"
  },
  "xo": {
    "space": true,
    "envs": [
      "node",
      "serviceworker",
      "browser"
    ],
    "globals": [
      "workbox",
      "GeolocationCoordinates"
    ],
    "ignore": [
      "public/vendor"
    ],
    "rules": {
      "no-alert": "off",
      "semi": [
        "error",
        "never"
      ],
      "no-mixed-operators": "off",
      "unicorn/prefer-number-properties": "off"
    }
  }
}
